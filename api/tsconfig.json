{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "jsx": "react",
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    // Prevent emitting output if there are errors
    "noEmitOnError": true,
    // Simplify import paths
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}